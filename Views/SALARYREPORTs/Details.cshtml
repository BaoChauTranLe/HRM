@model HRM.Models.SALARYREPORT

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/fresh-bootstrap-table.css" rel="stylesheet" />

    <link href="https://unpkg.com/bootstrap-table@1.18.1/dist/bootstrap-table.min.css" rel="stylesheet">

    <script src="https://unpkg.com/bootstrap-table@1.18.1/dist/bootstrap-table.min.js"></script>
    <script src="https://unpkg.com/bootstrap-table@1.18.1/dist/extensions/export/bootstrap-table-export.min.js"></script>

    <script src="https://unpkg.com/bootstrap-table/dist/bootstrap-table.min.js"></script>
</head>

<style>
    table, th, td, tr {
        border-color: #DFE0EB !important;
        border-radius: 5px !important;
    }

    .detail-title {
        background: #E0EFFF;
        width: 100%;
        height: 40px;
        color: #4282BB;
        font-weight: bold;
        font-family: IBM Plex Sans;
        font-size: 20px;
        padding-left: 24px;
        padding-top: 13px;
    }

    .detail-top-info-title {
        padding-right: 25px;
        font-family: IBM Plex Sans;
        font-style: normal;
        font-weight: bold;
        font-size: 14px;
    }

    .detail-top-info-content {
        padding-right: 25px;
        font-family: IBM Plex Sans;
        font-style: normal;
        font-weight: normal;
        font-size: 14px;
    }
</style>

<div class="detail-title">
    Chi tiết phiếu lương
</div>

<fieldset style="border: 1px solid #C1C1C1; box-sizing: border-box;">
    <table style="margin-left:24px; margin-top:20px; border:none">
        <tr>
            <th class="detail-top-info-title">
                @Html.DisplayName("Mã nhân viên:")
            </th>
            <th class="detail-top-info-title">
                @Html.DisplayName("Tên nhân viên:")
            </th>
            <th class="detail-top-info-title">
                @Html.DisplayName("Phòng:")
            </th>
            <th class="detail-top-info-title">
                @Html.DisplayName("Chức vụ:")
            </th>
            <th class="detail-top-info-title">
                @Html.DisplayName("Tháng/Năm:")
            </th>
        </tr>
        <tr>
            <td class="detail-top-info-content">
                @Html.DisplayFor(model => model.EmployeeID)
            </td>
            <td class="detail-top-info-content">
                @Html.DisplayFor(model => model.EMPLOYEE.EmployeeName)
            </td>
            <td class="detail-top-info-content">
                @Html.DisplayFor(model => model.EMPLOYEE.ROOM.RoomName)
            </td>
            <td class="detail-top-info-content">
                @Html.DisplayFor(model => model.EMPLOYEE.POSITION.PositionName)
            </td>
            <td class="detail-top-info-content">
                @Model.Month.Month/@Model.Month.Year
            </td>
        </tr>
    </table>

    <div class="col-md-6">
        <table class="fresh-table" id="fresh-table1" style="grid-column: 1/4">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayName("Tên cột")
                    </th>
                    <th>
                        @Html.DisplayName("Giá trị")
                    </th>
                    <th>
                        @Html.DisplayName("Đơn vị")
                    </th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <th>
                        @Html.DisplayName("Lương cơ bản")
                    </th>
                    <td>
                        @Html.DisplayFor(model => model.EMPLOYEE.CONTRACT.BasicSalary)
                    </td>
                    <td>
                        @Html.DisplayName("VNĐ")
                    </td>
                </tr>
                <tr>
                    <th>
                        @Html.DisplayName("Tổng tiền phụ cấp, trợ cấp, thưởng")
                    </th>
                    <td>
                        @Html.DisplayFor(model => model.Allowance)
                    </td>
                    <td>
                        @Html.DisplayName("VNĐ")
                    </td>
                </tr>
                <tr>
                    <th>
                        @Html.DisplayName("Lương theo ngày công chuẩn")
                    </th>
                    <td>
                        @Html.DisplayFor(model => model.StandardSalary)
                    </td>
                    <td>
                        @Html.DisplayName("VNĐ")
                    </td>
                </tr>
                <tr>
                    <th>
                        @Html.DisplayName("Số ngày đi làm")
                    </th>
                    <td>
                        @Html.DisplayFor(model => model.WorkDay)
                    </td>
                    <td>
                        @Html.DisplayName("Ngày")
                    </td>
                </tr>
                <tr>
                    <th>
                        @Html.DisplayName("Lương theo số ngày đi làm")
                    </th>
                    <td>
                        @Html.DisplayFor(model => model.WorkDaySalary)
                    </td>
                    <td>
                        @Html.DisplayName("VNĐ")
                    </td>
                </tr>
                <tr>
                    <th>
                        @Html.DisplayName("Số ngày nghỉ có hưởng lương")
                    </th>
                    <td>
                        @Html.DisplayFor(model => model.AbsentHaveSalary)
                    </td>
                    <td>
                        @Html.DisplayName("VNĐ")
                    </td>
                </tr>
                <tr>
                    <th>
                        @Html.DisplayName("Số tiền được hưởng")
                    </th>
                    <td>
                        @Html.DisplayFor(model => model.AbsentHaveSalaryValue)
                    </td>
                    <td>
                        @Html.DisplayName("VNĐ")
                    </td>
                </tr>
                <tr>
                    <th>
                        Khoản tiền trích đóng BH <br />
                        (BHXH: @Html.Action("getValueByName", new { paraName = "BHXH" })%, BHYT: @Html.Action("getValueByName", new { paraName = "BHYT" })%, BHTN: @Html.Action("getValueByName", new { paraName = "BHTN" })%)
                    </th>
                    <td>
                        @Html.DisplayFor(model => model.TotalInsurancePay)
                    </td>
                    <td>
                        @Html.DisplayName("VNĐ")
                    </td>
                </tr>
                <tr>
                    <th>
                        @Html.DisplayName("Thuế TNCN")
                    </th>
                    <td>
                        @Html.DisplayFor(model => model.IncomeTax)
                    </td>
                    <td>
                        @Html.DisplayName("VNĐ")
                    </td>
                </tr>
                <tr>
                    <th>
                        @Html.DisplayName("Tạm ứng")
                    </th>
                    <td>
                        @Html.DisplayFor(model => model.Advance)
                    </td>
                    <td>
                        @Html.DisplayName("VNĐ")
                    </td>
                </tr>
            </tbody>
        </table>
    </div>

    <div class="col-md-6">
        <table class="fresh-table" id="fresh-table2" style="grid-column: 1/4">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayName("Tên cột")
                    </th>
                    <th>
                        @Html.DisplayName("Giá trị")
                    </th>
                    <th>
                        @Html.DisplayName("Đơn vị")
                    </th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <th colspan="3" style="font-weight:bold; background:#EBEBEB; text-align:center">
                        @Html.DisplayName("Lương làm thêm ban ngày")
                    </th>
                </tr>
                <tr>
                    <th>
                        Ngày thường (@Html.Action("getValueByName", new { paraName = "HSLNgayThuong" })%)
                    </th>
                    <td>
                        @Html.DisplayFor(model => model.NormalOverTimeSalary)
                    </td>
                    <td>
                        @Html.DisplayName("VNĐ")
                    </td>
                </tr>
                <tr>
                    <th>
                        Ngày nghỉ hằng tuần (@Html.Action("getValueByName", new { paraName = "HSLNgayNghi" })%)
                    </th>
                    <td>
                        @Html.DisplayFor(model => model.DayOffOverTimeSalary)
                    </td>
                    <td>
                        @Html.DisplayName("VNĐ")
                    </td>
                </tr>
                <tr>
                    <th>
                        Ngày nghỉ có hưởng lương (@Html.Action("getValueByName", new { paraName = "HSLNgayNghiCoLuong" })%)
                    </th>
                    <td>
                        @Html.DisplayFor(model => model.SpecialDayOffOverTimeSalary)
                    </td>
                    <td>
                        @Html.DisplayName("VNĐ")
                    </td>
                </tr>
                <tr>
                    <th colspan="3" style="font-weight:bold; background:#EBEBEB; text-align:center">
                        @Html.DisplayName("Lương làm thêm ban đêm")
                    </th>
                </tr>
                <tr>
                    <th>
                        Ngày thường (@Html.Action("getValueByName", new { paraName = "HSLDemNgayThuong" })%)
                    </th>
                    <td>
                        @Html.DisplayFor(model => model.NightNormalOverTimeSalary)
                    </td>
                    <td>
                        @Html.DisplayName("VNĐ")
                    </td>
                </tr>
                <tr>
                    <th>
                        Ngày nghỉ hằng tuần (@Html.Action("getValueByName", new { paraName = "HSLDemNgayNghi" })%)
                    </th>
                    <td>
                        @Html.DisplayFor(model => model.NightDayOffOverTimeSalary)
                    </td>
                    <td>
                        @Html.DisplayName("VNĐ")
                    </td>
                </tr>
                <tr>
                    <th>
                        Ngày nghỉ có hưởng lương (@Html.Action("getValueByName", new { paraName = "HSLDemNgayNghiCoLuong" })%)
                    </th>
                    <td>
                        @Html.DisplayFor(model => model.NightSpecialDayOffOverTimeSalary)
                    </td>
                    <td>
                        @Html.DisplayName("VNĐ")
                    </td>
                </tr>
                <tr style="background: #EBEBEB;">
                    <th>
                        @Html.DisplayName("Tổng")
                    </th>
                    <td>
                        @Html.DisplayFor(model => model.OverTimeSalary)
                    </td>
                    <td>
                        @Html.DisplayName("VNĐ")
                    </td>
                </tr>
                <tr style="font-weight:bold">
                    <th>
                        @Html.DisplayName("Thực lĩnh")
                    </th>
                    <td>
                        @Html.DisplayFor(model => model.RealSalary)
                    </td>
                    <td>
                        @Html.DisplayName("VNĐ")
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</fieldset>

<p style="margin-top:20px">
    @Html.ActionLink("< Trở về danh sách phiếu lương", "Index")
</p>

<script>
    var $table1 = $('#fresh-table1')
    var $table2 = $('#fresh-table2')
    $(function () {
        $table1.bootstrapTable({
            classes: 'table table-hover table-responsive',
            toolbar: '.toolbar',
            pagination: true,
            striped: true,
            pageSize: 10,

            formatShowingRows: function (pageFrom, pageTo, totalRows) {
                return ''
            },
            formatRecordsPerPage: function (pageNumber) {
                return pageNumber + ' rows visible'
            }
        })
    })
    $(function () {
        $table2.bootstrapTable({
            classes: 'table table-hover table-responsive',
            toolbar: '.toolbar',
            pagination: true,
            striped: true,
            pageSize: 10,

            formatShowingRows: function (pageFrom, pageTo, totalRows) {
                return ''
            },
            formatRecordsPerPage: function (pageNumber) {
                return pageNumber + ' rows visible'
            }
        })
    })
</script>