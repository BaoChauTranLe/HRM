        //    }
        //});

        $.getJSON("/EMPLOYEEs/GetNameByID", { id: advanced.EmployeeID }, function (data, status) {
            name = data.name;
        });
        var Data = "<tr class='row_" + advanced.DateAdvanced + "'>" +
