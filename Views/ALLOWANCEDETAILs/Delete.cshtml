@model HRM.Models.ALLOWANCEDETAIL

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Bạn có chắc chắn muốn xóa thông tin này?</h3>
<div>

    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Tên nhân viên")
        </dt>

        <dd>
            @Html.DisplayNameFor(model => model.EMPLOYEE.EmployeeName)
        </dd>

        <dt>
            @Html.DisplayName("Tên phụ cấp, trợ cấp, thưởng")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ALLOWANCE.AllowanceName)
        </dd>

        <dt>
            @Html.DisplayName("Số tiền")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Value)
        </dd>

    </dl>

    @using (Html.BeginForm(Html.BeginForm(null, null, new { id = Model.AllowanceID, employee = Model.EmployeeID, month = Model.Month }))) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Xóa" class="btn btn-default" /> |
            @Html.ActionLink("Trở về", "Index")
        </div>
    }
</div>
