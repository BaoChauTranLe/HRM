@model HRM.Models.TAXRATE

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Delete</h2>

<h3>Bạn có chắc chắn muốn xóa bậc thuế suất này?</h3>
<div>
    <h4>TAXRATE</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Phần thu nhập tính thuế / tháng (VNĐ)")
        </dt>

        <dd>
            Từ @Html.DisplayFor(model => model.Min)
        </dd>

        <dt>
            @Html.DisplayName("Thuế suất (%)")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Rate)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Xóa" class="btn btn-default" /> |
            @Html.ActionLink("Trở về", "Index")
        </div>
    }
</div>
