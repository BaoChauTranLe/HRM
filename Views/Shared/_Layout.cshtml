    </div>


    <!-- The topbar -->
    <div class="topbar">
        <div class="container">
            <!-- <div class="title">
                <div class="title__main">
                    Title
                </div>
                <span class="gg-chevron-double-right"></span>
                <div class="title__sub">
                    Title
                </div>
            </div> -->

            <div class="user__name">
                Tên
            </div>

            <div class="user__ava">
                Anh
            </div>

            <div class="user__infor">
                Chức vụ <span>/</span> Phòng
            </div>

            <div class="notify__icon">
                <i class="fa fa-fw fa-user"></i>
